// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  type        String
  board       Board  @relation(fields: [boardId], references: [id])
  boardId     Int
}
